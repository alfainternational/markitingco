// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  phone         String?
  role          UserRole  @default(CLIENT)
  status        UserStatus @default(ACTIVE)

  // Relations
  accounts      Account[]
  sessions      Session[]
  organizations OrganizationMember[]
  projects      Project[] @relation("ProjectAssignee")
  createdProjects Project[] @relation("ProjectCreator")
  tasks         Task[] @relation("TaskAssignee")
  createdTasks  Task[] @relation("TaskCreator")
  contentItems  ContentItem[]
  reports       Report[]
  messages      Message[]
  notifications Notification[]
  proposals     Proposal[]
  auditLogs     AuditLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  @@index([email])
  @@index([role])
  @@map("users")
}

enum UserRole {
  SUPER_ADMIN      // مالك النظام - System Owner
  ADMIN            // مدير عام - General Manager
  AGENCY_MANAGER   // مدير قسم - Department Manager
  ACCOUNT_MANAGER  // مدير حسابات - Account Manager
  CONTENT_CREATOR  // منشئ محتوى - Content Creator
  ANALYST          // محلل - Analyst
  DESIGNER         // مصمم - Designer
  DEVELOPER        // مطور - Developer
  COPYWRITER       // كاتب محتوى - Copywriter
  CLIENT           // عميل - Client
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// ORGANIZATIONS (CLIENTS)
// ============================================

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  industry    String?
  website     String?
  description String?  @db.Text
  logoUrl     String?

  // Contact & Billing
  billingEmail String?
  phone        String?
  taxId        String?
  address      Json?

  // Plan & Status
  planType    PlanType @default(STARTER)
  status      OrganizationStatus @default(ACTIVE)

  // Settings
  settings    Json?

  // Relations
  members     OrganizationMember[]
  projects    Project[]
  invoices    Invoice[]
  proposals   Proposal[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([status])
  @@map("organizations")
}

enum PlanType {
  STARTER
  GROWTH
  ENTERPRISE
  CUSTOM
}

enum OrganizationStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  TRIAL
}

model OrganizationMember {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  role           MemberRole @default(MEMBER)

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([organizationId, userId])
  @@index([userId])
  @@map("organization_members")
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// ============================================
// PROJECTS & CAMPAIGNS
// ============================================

model Project {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  slug           String
  description    String?  @db.Text
  type           ProjectType
  status         ProjectStatus @default(ACTIVE)

  // Budget & Timeline
  budget         Float?
  currency       String   @default("USD")
  startDate      DateTime?
  endDate        DateTime?

  // Assignment
  assignedTeam   Json?

  // Metadata
  metadata       Json?

  // Relations
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  assignedUsers  User[] @relation("ProjectAssignee")
  createdBy      User @relation("ProjectCreator", fields: [createdById], references: [id])
  createdById    String
  campaigns      Campaign[]
  tasks          Task[]
  contentItems   ContentItem[]
  analytics      AnalyticsData[]
  reports        Report[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([organizationId, slug])
  @@index([organizationId])
  @@index([status])
  @@map("projects")
}

enum ProjectType {
  SEO
  PPC
  SOCIAL_MEDIA
  CONTENT_MARKETING
  EMAIL_MARKETING
  BRANDING
  WEB_DEVELOPMENT
  COMPREHENSIVE
}

enum ProjectStatus {
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
  ARCHIVED
}

model Campaign {
  id            String   @id @default(cuid())
  projectId     String
  name          String
  platform      CampaignPlatform
  objective     String?
  description   String?  @db.Text

  // Budget
  budgetDaily   Float?
  budgetTotal   Float?
  currency      String   @default("USD")

  // Status & Timeline
  status        CampaignStatus @default(DRAFT)
  startDate     DateTime?
  endDate       DateTime?

  // Performance Metrics
  metrics       Json?

  // Platform-specific data
  platformData  Json?

  // Relations
  project       Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  contentItems  ContentItem[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([projectId])
  @@index([platform])
  @@index([status])
  @@map("campaigns")
}

enum CampaignPlatform {
  GOOGLE_ADS
  GOOGLE_DISPLAY
  FACEBOOK
  INSTAGRAM
  LINKEDIN
  TWITTER
  TIKTOK
  SNAPCHAT
  YOUTUBE
  EMAIL
  OTHER
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  ACTIVE
  PAUSED
  COMPLETED
  ARCHIVED
}

// ============================================
// TASKS & WORKFLOW
// ============================================

model Task {
  id          String   @id @default(cuid())
  projectId   String
  title       String
  description String?  @db.Text
  status      TaskStatus @default(TODO)
  priority    TaskPriority @default(MEDIUM)

  // Assignment
  assignedToId String?
  assignedTo   User? @relation("TaskAssignee", fields: [assignedToId], references: [id])

  // Timeline
  dueDate     DateTime?
  completedAt DateTime?

  // Metadata
  tags        String[]
  attachments Json?

  // Relations
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy   User @relation("TaskCreator", fields: [createdById], references: [id])
  createdById String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@index([assignedToId])
  @@index([status])
  @@map("tasks")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  BLOCKED
  DONE
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// ============================================
// CONTENT MANAGEMENT
// ============================================

model ContentItem {
  id            String   @id @default(cuid())
  projectId     String
  campaignId    String?
  type          ContentType
  title         String
  content       String?  @db.Text
  status        ContentStatus @default(DRAFT)

  // Publishing
  platform      String?
  scheduledDate DateTime?
  publishedDate DateTime?
  publishedUrl  String?

  // Media & Assets
  media         Json?
  assets        Json?

  // Performance
  metrics       Json?

  // SEO
  seoMetadata   Json?

  // Relations
  project       Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  campaign      Campaign? @relation(fields: [campaignId], references: [id])
  createdBy     User @relation(fields: [createdById], references: [id])
  createdById   String

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([projectId])
  @@index([campaignId])
  @@index([status])
  @@map("content_items")
}

enum ContentType {
  BLOG_POST
  SOCIAL_POST
  EMAIL
  AD_COPY
  VIDEO_SCRIPT
  INFOGRAPHIC
  EBOOK
  WHITEPAPER
  CASE_STUDY
  OTHER
}

enum ContentStatus {
  DRAFT
  REVIEW
  APPROVED
  SCHEDULED
  PUBLISHED
  ARCHIVED
}

// ============================================
// ANALYTICS & REPORTING
// ============================================

model AnalyticsData {
  id          String   @id @default(cuid())
  projectId   String
  date        DateTime
  platform    String
  metricType  String
  metricValue Float
  dimensions  Json?

  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  syncedAt    DateTime @default(now())

  @@index([projectId, date])
  @@index([platform])
  @@map("analytics_data")
}

model Report {
  id            String   @id @default(cuid())
  projectId     String
  title         String
  type          ReportType
  periodStart   DateTime
  periodEnd     DateTime

  // Report Data
  data          Json
  summary       String?  @db.Text

  // Files
  pdfUrl        String?

  // Delivery
  status        ReportStatus @default(DRAFT)
  sentAt        DateTime?

  // Relations
  project       Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  generatedBy   User @relation(fields: [generatedById], references: [id])
  generatedById String

  generatedAt   DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([projectId])
  @@map("reports")
}

enum ReportType {
  WEEKLY
  MONTHLY
  QUARTERLY
  ANNUAL
  CUSTOM
}

enum ReportStatus {
  DRAFT
  GENERATED
  SENT
  ARCHIVED
}

// ============================================
// FINANCIAL MANAGEMENT
// ============================================

model Invoice {
  id             String   @id @default(cuid())
  organizationId String
  invoiceNumber  String   @unique
  amount         Float
  currency       String   @default("USD")
  status         InvoiceStatus @default(DRAFT)

  // Timeline
  dueDate        DateTime
  paidDate       DateTime?

  // Details
  lineItems      Json
  notes          String?  @db.Text

  // Files
  pdfUrl         String?

  // Relations
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  payments       Payment[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([organizationId])
  @@index([status])
  @@map("invoices")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
  REFUNDED
}

model Payment {
  id            String   @id @default(cuid())
  invoiceId     String
  amount        Float
  currency      String   @default("USD")
  method        PaymentMethod
  transactionId String?
  status        PaymentStatus

  // Gateway Data
  gatewayData   Json?

  // Relations
  invoice       Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  processedAt   DateTime @default(now())
  createdAt     DateTime @default(now())

  @@index([invoiceId])
  @@map("payments")
}

enum PaymentMethod {
  STRIPE
  PAYPAL
  BANK_TRANSFER
  CASH
  OTHER
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

// ============================================
// SERVICES & PROPOSALS
// ============================================

model Service {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  description   String?  @db.Text
  category      ServiceCategory
  pricingModel  PricingModel
  basePrice     Float?
  features      Json?
  isActive      Boolean  @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([category])
  @@map("services")
}

enum ServiceCategory {
  SEO
  PPC
  SOCIAL_MEDIA
  CONTENT_MARKETING
  EMAIL_MARKETING
  BRANDING
  WEB_DEVELOPMENT
  CONSULTING
  ANALYTICS
}

enum PricingModel {
  FIXED
  HOURLY
  RETAINER
  PERFORMANCE
  CUSTOM
}

model Proposal {
  id             String   @id @default(cuid())
  organizationId String
  title          String
  description    String?  @db.Text
  services       Json
  totalAmount    Float
  currency       String   @default("USD")
  status         ProposalStatus @default(DRAFT)

  // Timeline
  validUntil     DateTime
  sentAt         DateTime?
  acceptedAt     DateTime?
  rejectedAt     DateTime?

  // Files
  pdfUrl         String?

  // Relations
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy      User @relation(fields: [createdById], references: [id])
  createdById    String

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([organizationId])
  @@index([status])
  @@map("proposals")
}

enum ProposalStatus {
  DRAFT
  SENT
  VIEWED
  ACCEPTED
  REJECTED
  EXPIRED
}

// ============================================
// COMMUNICATION
// ============================================

model Conversation {
  id          String   @id @default(cuid())
  title       String?
  type        ConversationType @default(DIRECT)
  participants Json
  lastMessageAt DateTime?

  messages    Message[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("conversations")
}

enum ConversationType {
  DIRECT
  GROUP
  PROJECT
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  content        String   @db.Text
  attachments    Json?
  readBy         Json?

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User @relation(fields: [senderId], references: [id])

  createdAt      DateTime @default(now())

  @@index([conversationId])
  @@index([senderId])
  @@map("messages")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String   @db.Text
  link      String?
  data      Json?
  readAt    DateTime?

  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId, readAt])
  @@map("notifications")
}

// ============================================
// AUDIT & LOGGING
// ============================================

model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  action      String
  entityType  String
  entityId    String
  changes     Json?
  ipAddress   String?
  userAgent   String?

  user        User? @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================
// SERVICES CATALOG & PACKAGES
// ============================================

model Package {
  id              String   @id @default(cuid())
  name            String
  nameAr          String?
  slug            String   @unique
  description     String?  @db.Text
  descriptionAr   String?  @db.Text

  // Pricing
  price           Float
  currency        String   @default("USD")
  billingCycle    BillingCycle @default(MONTHLY)

  // Package Details
  features        Json     // Array of feature objects
  services        Json     // Array of included service IDs and configurations

  // Limitations
  maxProjects     Int?
  maxUsers        Int?
  maxCampaigns    Int?
  storageLimit    Int?     // in GB

  // Support
  supportLevel    SupportLevel @default(BASIC)

  // Status
  isActive        Boolean  @default(true)
  isPopular       Boolean  @default(false)
  displayOrder    Int      @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([slug])
  @@index([isActive])
  @@map("packages")
}

enum BillingCycle {
  MONTHLY
  QUARTERLY
  SEMI_ANNUAL
  ANNUAL
  ONE_TIME
}

enum SupportLevel {
  BASIC        // Email support (24-48h response)
  PRIORITY     // Email + Chat (4-8h response)
  PREMIUM      // 24/7 Phone + Email + Chat (1h response)
  DEDICATED    // Dedicated account manager
}

// ============================================
// TEAM & DEPARTMENTS
// ============================================

model Department {
  id          String   @id @default(cuid())
  name        String
  nameAr      String?
  slug        String   @unique
  description String?  @db.Text
  type        DepartmentType

  // Hierarchy
  parentId    String?
  parent      Department?  @relation("DepartmentHierarchy", fields: [parentId], references: [id])
  children    Department[] @relation("DepartmentHierarchy")

  // Leadership
  managerId   String?

  // Settings
  settings    Json?

  // Relations
  teamMembers TeamMember[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([type])
  @@map("departments")
}

enum DepartmentType {
  MANAGEMENT      // الإدارة
  MARKETING       // التسويق
  CREATIVE        // الإبداع
  TECHNICAL       // التقني
  ANALYTICS       // التحليلات
  SALES           // المبيعات
  SUPPORT         // الدعم
  OPERATIONS      // العمليات
}

model TeamMember {
  id            String   @id @default(cuid())
  userId        String
  departmentId  String

  // Position Details
  position      String
  positionAr    String?
  level         EmployeeLevel

  // Employment
  employmentType EmploymentType
  startDate     DateTime
  endDate       DateTime?

  // Work Details
  workload      Int      @default(100) // Percentage (0-100)
  hourlyRate    Float?
  salary        Float?

  // Skills & Expertise
  skills        Json?    // Array of skills
  certifications Json?   // Array of certifications

  // Performance
  performance   Json?    // Performance metrics and reviews

  // Status
  status        TeamMemberStatus @default(ACTIVE)

  // Relations
  department    Department @relation(fields: [departmentId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, departmentId])
  @@index([userId])
  @@index([departmentId])
  @@index([status])
  @@map("team_members")
}

enum EmployeeLevel {
  INTERN        // متدرب
  JUNIOR        // مبتدئ
  MID           // متوسط
  SENIOR        // أول
  LEAD          // قائد
  MANAGER       // مدير
  DIRECTOR      // مدير تنفيذي
  C_LEVEL       // مستوى تنفيذي
}

enum EmploymentType {
  FULL_TIME     // دوام كامل
  PART_TIME     // دوام جزئي
  CONTRACT      // عقد
  FREELANCE     // مستقل
  INTERN        // متدرب
}

enum TeamMemberStatus {
  ACTIVE
  ON_LEAVE
  SUSPENDED
  TERMINATED
}

// ============================================
// PERMISSIONS & ROLES
// ============================================

model Permission {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  category    PermissionCategory
  resource    String   // e.g., "project", "campaign", "client"
  action      PermissionAction // e.g., "create", "read", "update", "delete"

  // Role Assignments
  rolePermissions RolePermission[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([resource, action])
  @@index([category])
  @@map("permissions")
}

enum PermissionCategory {
  ORGANIZATION  // إدارة المؤسسات
  PROJECT       // إدارة المشاريع
  CAMPAIGN      // إدارة الحملات
  CONTENT       // إدارة المحتوى
  FINANCIAL     // الإدارة المالية
  TEAM          // إدارة الفريق
  ANALYTICS     // التحليلات
  SETTINGS      // الإعدادات
  SYSTEM        // النظام
}

enum PermissionAction {
  CREATE
  READ
  UPDATE
  DELETE
  APPROVE
  PUBLISH
  EXPORT
  MANAGE
}

model RolePermission {
  id           String   @id @default(cuid())
  role         UserRole
  permissionId String

  // Constraints
  conditions   Json?    // Optional conditions for permission

  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())

  @@unique([role, permissionId])
  @@index([role])
  @@map("role_permissions")
}

// ============================================
// APPROVAL WORKFLOWS
// ============================================

model ApprovalWorkflow {
  id              String   @id @default(cuid())
  name            String
  nameAr          String?
  type            ApprovalType
  description     String?  @db.Text

  // Workflow Configuration
  stages          Json     // Array of approval stages
  requiredApprovals Int    @default(1)
  autoApproveAfter  Int?   // Hours after which to auto-approve

  // Status
  isActive        Boolean  @default(true)

  // Relations
  approvalRequests ApprovalRequest[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([type])
  @@map("approval_workflows")
}

enum ApprovalType {
  PROJECT_CREATION    // إنشاء مشروع
  CAMPAIGN_LAUNCH     // إطلاق حملة
  CONTENT_PUBLICATION // نشر محتوى
  BUDGET_CHANGE       // تغيير الميزانية
  CONTRACT_SIGNING    // توقيع عقد
  INVOICE_ISSUANCE    // إصدار فاتورة
  PROPOSAL_SUBMISSION // تقديم عرض
  CUSTOM              // مخصص
}

model ApprovalRequest {
  id          String   @id @default(cuid())
  workflowId  String
  entityType  String   // e.g., "project", "campaign", "content"
  entityId    String

  // Request Details
  title       String
  description String?  @db.Text
  data        Json?    // Additional request data

  // Status
  status      ApprovalStatus @default(PENDING)
  currentStage Int      @default(0)

  // Requester
  requesterId String

  // Relations
  workflow    ApprovalWorkflow @relation(fields: [workflowId], references: [id])
  approvals   Approval[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  resolvedAt  DateTime?

  @@index([workflowId])
  @@index([entityType, entityId])
  @@index([status])
  @@map("approval_requests")
}

enum ApprovalStatus {
  PENDING     // قيد الانتظار
  IN_PROGRESS // قيد المراجعة
  APPROVED    // تمت الموافقة
  REJECTED    // مرفوض
  CANCELLED   // ملغي
  EXPIRED     // منتهي
}

model Approval {
  id        String   @id @default(cuid())
  requestId String
  stage     Int

  // Approver
  approverId String
  role       UserRole

  // Decision
  decision   ApprovalDecision?
  comments   String?  @db.Text
  decidedAt  DateTime?

  // Relations
  request    ApprovalRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())

  @@index([requestId])
  @@index([approverId])
  @@map("approvals")
}

enum ApprovalDecision {
  APPROVED      // موافق
  REJECTED      // مرفوض
  NEEDS_CHANGES // يحتاج تعديلات
}
